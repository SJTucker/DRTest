<div class="panel">
	<h1 class="text-center header">Wage Calculator</h1>
</div>

<% flash.each do |type, message| -%>
	<div class="alert alert-#{type} text-center">
		<%= message %>
	</div>
<% end -%>

<div class="container">
	<% if @rule.errors.any? %>
		<%= pluralize(@rule.errors.count, "error") + " prohibited this rule from being saved:" %>
		<ul>
			<% @rule.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h3>Base Wage</h3>
			<div class="base-wage">$200/hr</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-3">
			<h3>Add Rule</h3>
			<%= simple_form_for @rule do |f| %>
			  <%= f.input :description %>
			  <%= f.input :cost_modifier %>
			  <%= f.button :submit %>
			<% end %>
		</div>

		<div class="col-md-3">
			<h3>Select Rule</h3>
			<select>
				<% @rules.each do |rule| -%>
					<option><%= '$' + rule.cost_modifier + ' ' + rule.description%></option>
				<% end -%>
			</select>
		</div>
	</div>
</div>
